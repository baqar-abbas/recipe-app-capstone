<div class="container">
  <h1>Public Recipes</h1>

  <div class="row">
    <% @public_recipes.each do |public_recipe| %>
      <div class="col-12">
        <%= link_to user_recipe_path(id: public_recipe.id), class: "recipe-link" do %>
          <div class="card mb-4">
            <div class="row no-gutters">
              <div class="col-md-6">
                <div class="card-body">
                  <h2 class="card-title"><%= public_recipe.name %></h2>
                  <p class="card-text">
                    <em>By: <%= public_recipe.user.name %> </em>
                  </p>
                </div>
              </div>
              <div class="col-md-6">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Total food items: <%= public_recipe.recipe_foods.count %></li>
                  <li class="list-group-item">
                    Total Price: 
                    <% total_price = 0 %>
                    <% public_recipe.recipe_foods.each do |recipe_food| %>
                      <% total_price += recipe_food.quantity * recipe_food.food.price %>
                    <% end %>
                    <%= total_price %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="list_btn">
    <button class="recipe_btn"><%= link_to "Add Recipe", new_user_recipe_path %></button>
  </div>
</div>
