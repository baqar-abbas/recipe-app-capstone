<%= form_with(model: [@user, @recipe, @recipe_food], url: user_recipe_recipe_foods_path(@user, @recipe), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :food_id, "Food" %>
    <%= form.collection_select(:food_id, @foods, :id, :name, { prompt: "Select a food" }, class: "form-control custom-select") %>
  </div>
  <div class="form-group">
    <%= form.label :quantity, "Quantity" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group d-flex justify-content-between align-items-center">
    <%= link_to 'Back', user_recipe_path(id: @recipe.id), class: 'btn btn-secondary' %>
    <%= form.submit 'Add Food', class: 'btn btn-primary' %>
  </div>
<% end %>
