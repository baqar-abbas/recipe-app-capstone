<div class="container">
<h1 class="text-center">Add Food</h1>
<br>
  <%= form_with(model: @food, url: user_foods_path, local: true, html: { class: "form" }) do |form| %>
    <div class="inputs">
      <div class="form-group">
        <%= form.label :name %>:<br />
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :measurement_unit %>:<br />
        <%= form.select :measurement_unit, options_for_select(['Kilogram', 'Ton', 'Gram', 'Decigram']), {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :price %>:<br />
        <%= form.number_field :price, class: "form-control", min: 0 %>
      </div>
      <div class="form-group">
        <%= form.label :quantity %>:<br />
        <%= form.number_field :quantity, class: "form-control", min: 0 %>
      </div>
      <div class="form-group">
        <%= form.label :user_id %>:<br />
        <%= form.text_field :user_id, value: current_user.id, disabled: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
      <div class="form-group post-btn">
        <button class="btn btn-secondary">
          <%= link_to "Back", user_foods_path(current_user), class: "text-white" %>
        </button>
      </div>
    </div>
  <% end %>
</div>
