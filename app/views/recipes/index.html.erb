<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Recipe List</h1>
    <%= link_to 'New Recipe', new_user_recipe_path, class: 'btn btn-primary' %>
  </div>
  <br>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-12">
        <div class="card mb-3 custom-card">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.name %></h5>
            <p class="card-text"><%= recipe.description %></p>
          </div>
          
          <div class="card-footer d-flex justify-content-end align-items-center" style="height: 40px;">
            <div>
                <%= link_to "Details", user_recipe_path(id: recipe.id), class: 'btn btn-link details-link text-info' %>
                <% if current_user && current_user.id == recipe.user_id %>
                  <%= link_to 'Delete', user_recipe_path(user_id: recipe.user_id, id: recipe.id), data: { turbo_confirm: 'Are you sure?', turbo_method: :delete }, class: 'btn btn-link delete-link text-danger' %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
